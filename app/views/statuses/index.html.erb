<p id="notice"><%= notice %></p>

<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.user %></td>
        <td><%= status.content %></td>
        <td><%= link_to 'Show', user_status_path(@user, status) %></td>
        <td><%= link_to 'Edit', edit_user_status_path(@user, status) %></td>
        <td><%= link_to 'Destroy', user_status_path(@user, status), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_user_status_path(@user) %>
